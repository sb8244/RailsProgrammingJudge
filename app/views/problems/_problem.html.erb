<h3><%= problem.name %></h3>
<% if problem.competition %>
<h4>Competition: <%= link_to problem.competition.name , problem.competition %></h4>
<% end %>
<div class='well' id='problem-<%= problem.id %>'>
  <div class='row'>
    <div class='col-sm-12'>
      <%= problem.html.html_safe %>
    </div>
  </div>

  <div class='row'>
    <div class='col-md-6'>
      <h4>Input Example</h4>
      <textarea rows=10 cols=40><%= problem.input_example %></textarea>
    </div>

    <div class='col-md-6'>
      <h4>Output Example</h4>
      <textarea rows=10 cols=40><%= problem.output_example %></textarea>
    </div>
  </div>

  <% if submit %>
  <div class='row'>
    <div class='col-sm-12'>
      <%= link_to 'Details and Submission Page', problem, class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
  <% end %>
</div>