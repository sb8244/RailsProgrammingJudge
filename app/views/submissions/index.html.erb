<table class='table table-striped table-bordered'>
  <thead>
    <tr>
      <th>Competition</th>
      <th>Problem</th>
      <th>Submitted</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @submissions.each do |submission| %>
      <tr class='<%= submission.status == 'success' ? 'success' : '' %>'>
        <td><%= link_to submission.problem.competition.name, competition_path(submission.problem.competition) %></td>
        <td><%= link_to submission.problem.name, competition_problem_path(submission.problem.competition, submission.problem) %></td>
        <td><%= submission.updated_at.strftime('%B %e, %l:%M:%S %P') %></td>
        <td><%= submission.status.humanize %></td>
        <td><%= link_to 'Details', submission, class: 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>